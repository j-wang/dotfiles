ec () {
    $(emacsclient "$1"&)
}

exa_or_ls () {
    if command -v exa >/dev/null 2>&1; then
        exa $1
    else
        ls $1
    fi
}

# exa if available
alias ls=exa_or_ls

# rstudio for issues with Java on Mac
rstudio() {
    R CMD javareconf -e
    open -a rstudio
}

# alias for reloading .zshrc easily
alias sz='source $HOME/.zshrc'

