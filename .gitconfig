[user]
	name = James Wang
	email = veriathon@gmail.com
	signingkey = ssh-ed25519 AAAAC3NzaC1lZDI1NTE5AAAAIKjq8ATQc3aBF02T+GUQNEGFxMMiSZXoT36d5wM949JN

[color]
	ui = auto
	branch = auto
	status = auto
	diff = auto
[core]
	editor = vim
	autocrlf = input
[alias]
	last = log -1 HEAD
	lg = log --oneline --decorate --all --graph -30
[filter "lfs"]
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process
	required = true
[gpg]
	format = ssh

[gpg "ssh"]
	program = /Applications/1Password.app/Contents/MacOS/op-ssh-sign
	# linked from dotfiles linker
	allowedSignersFile = /Users/jameswang/.config/git/allowed_signers

[commit]
	gpgsign = true

[url "ssh://git@github.com/"]
	insteadOf = https://github.com/
